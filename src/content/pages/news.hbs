    </div> --}}
  </div>
  
</div>

<!-- scripts -->
<script type="text/javascript">

function initPage() {

  head.load(prefixURL + "js/jquery.readmore.js", function () {
    $('.js-read-more').readmore({
      maxHeight: 140,
      heightMargin: 260,
      embedCSS: false,
      toggleClass: 'read-more__toggle',
      sectionClass: 'read-more__section',
      expandedClass: 'read-more__section--expanded',
      collapsedClass: 'read-more__section--collapsed'
    });
  });

  // prefix any local download URLs
  $('.js-local-download').each(function () {
    $(this).attr('href', prefixURL + 'downloads/' + $(this).data('file-name'));
  });

}

</script>
